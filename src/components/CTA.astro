<style>
    .cta {
        padding: 100px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
        line-height: 1.2;
    }

    .price-box {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        padding: 2rem;
        position: relative;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

    .discount-badge {
        position: absolute;
        top: -15px;
        right: 20px;
        background: linear-gradient(135deg, #ff6b6b, #ff5252);
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: 800;
        font-size: 1.1rem;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.5);
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    .price-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .original-price {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.6);
        text-decoration: line-through;
        font-weight: 500;
    }

    .current-price {
        font-size: 3rem;
        font-weight: 900;
        color: #ffd89b;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        letter-spacing: -1px;
    }

    .price-note {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .cta-text {
        font-size: 1.5rem;
        line-height: 1.6;
        margin: 0;
    }

    .cta-text strong {
        font-weight: 700;
    }

    .btn-cta {
        display: inline-block;
        background: #ff6b6b;
        color: white;
        padding: 20px 60px;
        font-size: 1.5rem;
        font-weight: 700;
        text-decoration: none;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 40px rgba(255, 107, 107, 0.4);
        margin-top: 1rem;
    }

    .btn-cta:hover {
        background: #ff5252;
        transform: translateY(-3px);
        box-shadow: 0 15px 50px rgba(255, 107, 107, 0.5);
    }

    @media (max-width: 768px) {
        .cta {
            padding: 80px 20px;
        }

        .cta-title {
            font-size: 2rem;
        }

        .price-box {
            padding: 1.5rem 1rem;
        }

        .discount-badge {
            top: -12px;
            right: 10px;
            font-size: 0.95rem;
            padding: 6px 16px;
        }

        .price-container {
            flex-direction: column;
            gap: 0.5rem;
        }

        .original-price {
            font-size: 1.25rem;
        }

        .current-price {
            font-size: 2.5rem;
        }

        .price-note {
            font-size: 0.85rem;
        }

        .cta-text {
            font-size: 1.25rem;
        }

        .btn-cta {
            padding: 18px 48px;
            font-size: 1.25rem;
        }

        .cta-features {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
